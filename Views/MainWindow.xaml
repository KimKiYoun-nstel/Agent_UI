<Window x:Class="Agent.UI.Wpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Agent.UI.Wpf.Views.Converters"
    xmlns:behaviors="clr-namespace:Agent.UI.Wpf.Views.Behaviors"
    Title="Agent Console (WPF)" Height="835" Width="1425" MinWidth="1100"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:TrafficBrushConverter x:Key="TrafficBrushConverter" />
        <conv:LogBrushConverter x:Key="LogBrushConverter" />
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top: Connection + Config -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" Style="{StaticResource FieldRow}">
                <TextBlock Text="Role" Style="{StaticResource LabelText}"/>
                <ComboBox Width="110" ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Style="{StaticResource FieldRow}">
                <TextBlock Text="Address" Style="{StaticResource LabelText}"/>
                <TextBox Width="160" Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Style="{StaticResource FieldRow}">
                <TextBlock Text="Port" Style="{StaticResource LabelText}"/>
                <TextBox Width="80" Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Style="{StaticResource FieldRow}" Margin="0,0,12,0">
                <Button Content="{Binding ConnectionButtonText}" Command="{Binding ToggleConnectionCommand}" Style="{StaticResource PrimaryAction}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Style="{StaticResource FieldRow}">
                <TextBlock Text="Config" Style="{StaticResource LabelText}"/>
                <TextBox Width="360" IsReadOnly="True" Text="{Binding ConfigRoot}"/>
                <Button Content="Browse" Command="{Binding BrowseConfigCommand}" Style="{StaticResource ActionButton}"/>
                <Button Content="Reload" Command="{Binding ReloadConfigCommand}" Style="{StaticResource ActionButton}"/>
            </StackPanel>
        </DockPanel>

        <!-- Center: two columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: DDS + Topic + Payload -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="138"/>
                    <RowDefinition Height="Auto" MinHeight="104.88"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- DDS_UX: 상위 그룹으로 전체 DDS 관련 UI를 묶음 -->
                <GroupBox Header="DDS (DDS_UX)" Grid.Row="0" Margin="6,6,6,6">
                    <Grid IsEnabled="{Binding CanUseDds}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- qos (분리) -->
                            <RowDefinition Height="Auto"/>
                            <!-- publisher -->
                            <RowDefinition Height="Auto"/>
                            <!-- subscriber -->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <!-- label -->
                            <ColumnDefinition Width="*"/>
                            <!-- field -->
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- participant 라인 (Domain + Create/ Clear) -->
                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource FieldGroupBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Domain" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Width="140" Text="{Binding DomainId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Create Participant" Command="{Binding CreateParticipantCommand}" Style="{StaticResource PrimaryAction}"/>
                                    <Button Content="Clear" Command="{Binding ClearDdsCommand}" Style="{StaticResource ActionButton}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- qos 라인 (분리) -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource FieldGroupBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="QoS" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" ItemsSource="{Binding QosProfiles}" SelectedItem="{Binding SelectedQosProfile}" HorizontalAlignment="Stretch" />
                                    <Button Grid.Column="1" Content="Detail" Command="{Binding ShowQosDetailCommand}" Style="{StaticResource ActionButton}" Margin="6,0,0,0"/>
                                    <Button Grid.Column="2" Content="Refresh QoS" Command="{Binding RefreshQosCommand}" IsEnabled="{Binding IsConnected}" Style="{StaticResource ActionButton}" Margin="6,0,0,0"/>
                                    <Button Grid.Column="3" Content="Load QoS from File" Command="{Binding LoadQosFromFileCommand}" Style="{StaticResource ActionButton}" Margin="6,0,0,0"/>
                                </Grid>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- publisher 라인 -->
                        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource FieldGroupBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Publisher" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" MinWidth="140" HorizontalAlignment="Stretch" Text="{Binding PublisherName}" />
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="Create" Command="{Binding CreatePublisherCommand}" Style="{StaticResource PrimaryAction}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- subscriber 라인 -->
                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource FieldGroupBorder}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Subscriber" Style="{StaticResource LabelText}" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" MinWidth="140" HorizontalAlignment="Stretch" Text="{Binding SubscriberName}" />
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="Create" Command="{Binding CreateSubscriberCommand}" Style="{StaticResource PrimaryAction}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Topic / Type" Grid.Row="1" Margin="6,6,6,6" IsEnabled="{Binding CanUseDds}">
                    <StackPanel Orientation="Horizontal" Style="{StaticResource FieldRow}">
                        <TextBlock Text="Topic" Style="{StaticResource LabelText}"/>
                        <TextBox Width="210" Text="{Binding Topic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="Type" Style="{StaticResource LabelText}"/>
                        <ComboBox Width="260" ItemsSource="{Binding TypeNames}" SelectedItem="{Binding SelectedType}"/>
                        <Button Content="Open Form" Command="{Binding OpenFormCommand}" Style="{StaticResource ActionButton}"/>
                        <Button Content="Sample JSON" Command="{Binding SampleJsonCommand}" Style="{StaticResource ActionButton}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Payload" Grid.Row="2" Margin="6,0,6,0" MinHeight="360" VerticalAlignment="Stretch" IsEnabled="{Binding CanUseDds}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" Text="{Binding Payload, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource MonoText}" AcceptsReturn="True"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Create Writer" Command="{Binding CreateWriterCommand}" Style="{StaticResource ActionButton}"/>
                            <Button Content="Create Reader" Command="{Binding CreateReaderCommand}" Style="{StaticResource ActionButton}"/>
                            <Button Content="Publish" Command="{Binding PublishCommand}" Style="{StaticResource PrimaryAction}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- GridSplitter between left and right panels -->
            <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#EEE" ShowsPreview="True"/>

            <!-- Right: TabControl with Log and Messages -->
            <TabControl Grid.Column="2" Margin="8,0,0,0">
                <!-- Log 탭 -->
                <TabItem Header="Log">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,6">
                            <ComboBox Width="140" ItemsSource="{Binding LogLevels}" SelectedItem="{Binding SelectedLogLevel}" />
                            <!-- CopySelected will be handled in code-behind to copy the RichTextBox selection -->
                            <Button Content="Copy Selected" Click="CopySelectedLogs_Click" Style="{StaticResource SmallButton}"/>
                            <Button Content="Copy All" Command="{Binding CopyLogCommand}" Style="{StaticResource SmallButton}"/>
                            <Button Content="Clear" Command="{Binding ClearLogCommand}" Style="{StaticResource SmallButton}"/>
                        </StackPanel>

                        <!-- Single RichTextBox so users can drag-select arbitrarily (like Notepad) -->
                        <RichTextBox x:Name="LogBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"
                                     FontFamily="Consolas" FontSize="12" Background="Transparent" BorderThickness="0" />
                    </DockPanel>
                </TabItem>

                <!-- Messages 탭 -->
                <TabItem Header="Messages">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 상단 필터/초기화: Copy All으로 변경 (전체 Traffic 복사) -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,6">
                            <Button Content="Copy All" Command="{Binding CopySelectedMessagesCommand}"
                                    CommandParameter="{Binding Traffic}"
                                    Style="{StaticResource SmallButton}" />
                            <Button Content="Clear" Command="{Binding ClearTrafficCommand}" Style="{StaticResource SmallButton}"/>
                        </StackPanel>

                        <!-- Continuous message view: ScrollViewer + ItemsControl so messages scroll as one region -->
                        <ScrollViewer x:Name="TrafficScroll" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="TrafficItems" ItemsSource="{Binding Traffic}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6" Margin="4" CornerRadius="4" Background="Transparent">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Header}" FontWeight="Bold"/>
                                                <TextBox Text="{Binding Pretty}"
                                                         IsReadOnly="True"
                                                         Style="{StaticResource MonoText}"
                                                         BorderThickness="0"
                                                         Background="Transparent"
                                                         TextWrapping="Wrap"
                                                         AcceptsReturn="True"
                                                         VerticalAlignment="Top"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Bottom: Status -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
